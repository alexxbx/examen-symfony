FROM php:8.2-fpm

# 1. Installer les dépendances système nécessaires
RUN apt-get update && apt-get install -y \
    git unzip zip curl libpq-dev libonig-dev libxml2-dev libzip-dev \
    libicu-dev zlib1g-dev libcurl4-openssl-dev libssl-dev libxslt1-dev \
    && docker-php-ext-install pdo pdo_pgsql zip intl dom mbstring xml simplexml tokenizer fileinfo \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# 2. Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# 3. Créer un dossier pour l’application
WORKDIR /app

# 4. Copier les fichiers nécessaires pour installer les dépendances (composer.lock en priorité)
COPY composer.json composer.lock symfony.lock ./

# 5. Installer les dépendances PHP (sans les scripts pour éviter les erreurs en root)
RUN composer install --no-interaction --optimize-autoloader --no-scripts

# 6. Copier le reste du code de l’application
COPY . .

# 7. (Optionnel) Lancer un script d’init Symfony à la place de auto-scripts
#    Tu peux créer un fichier `init.sh` contenant :
#    php bin/console cache:clear --no-warmup
#    php bin/console assets:install public
#    chmod +x init.sh
#    Et ajouter ici : RUN ./init.sh

# 8. Exposer un port (si tu utilises un serveur HTTP comme Caddy ou Nginx à côté)
EXPOSE 8000

# 9. Lancer PHP-FPM par défaut
CMD ["php-fpm"]
