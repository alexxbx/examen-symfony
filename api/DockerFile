FROM php:8.2-cli

# Installe les extensions n√©cessaires
RUN apt-get update && apt-get install -y \
    git unzip zip libpq-dev libonig-dev libxml2-dev curl \
    && docker-php-ext-install pdo pdo_pgsql

# Installe Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
RUN composer --version

# Installe le binaire symfony via archive officielle
RUN wget https://github.com/symfony/cli/releases/latest/download/symfony_linux_amd64.tar.gz \
    && tar -xzf symfony_linux_amd64.tar.gz \
    && mv symfony /usr/local/bin/symfony \
    && rm symfony_linux_amd64.tar.gz
RUN symfony --version

WORKDIR /app

COPY . .

RUN composer install --no-interaction --optimize-autoloader

# Symfony utilise le serveur interne PHP en dev
CMD ["php", "-S", "0.0.0.0:10000", "-t", "public"]
