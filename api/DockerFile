FROM php:8.2-fpm

# 1. Installer les dépendances système
RUN apt-get update && apt-get install -y \
    git unzip zip curl libpq-dev libzip-dev libonig-dev \
    libxml2-dev libicu-dev zlib1g-dev libcurl4-openssl-dev \
    libssl-dev libxslt1-dev \
    && docker-php-ext-install pdo pdo_pgsql zip intl mbstring xml \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# 2. Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# 3. Définir le dossier de travail
WORKDIR /var/www

# 4. Copier les fichiers de l'application
COPY . .

# 5. Installer les dépendances PHP (en mode production)
RUN composer install --no-dev --optimize-autoloader --no-interaction

# 6. Créer un user www-data (évite les problèmes de permission)
RUN chown -R www-data:www-data /var/www

EXPOSE 10000
CMD ["php", "-S", "0.0.0.0:10000", "-t", "public"]
