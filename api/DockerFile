FROM php:8.2-apache

RUN a2enmod rewrite

WORKDIR /var/www/api

ENV COMPOSER_ALLOW_SUPERUSER=1

# Copie le binaire Composer dans l'image
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Copie le contenu du dossier api/ du repo dans le conteneur
COPY . ./
COPY .env.example .env

RUN apt-get update && apt-get install -y \
    git unzip zip curl libpq-dev libonig-dev libxml2-dev libzip-dev \
    libicu-dev zlib1g-dev libcurl4-openssl-dev libssl-dev libxslt1-dev \
&& docker-php-ext-install pdo pdo_pgsql zip intl dom mbstring xml simplexml fileinfo \
&& apt-get clean && rm -rf /var/lib/apt/lists/*

RUN composer install --no-dev --optimize-autoloader

RUN sed -i 's|DocumentRoot /var/www/html|DocumentRoot /var/www/api/public|g' /etc/apache2/sites-available/000-default.conf

RUN mkdir -p /var/www/api/var /var/www/api/public && chown -R www-data:www-data /var/www/api/var /var/www/api/public

EXPOSE 80